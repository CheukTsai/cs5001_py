def setup():
  size(600, 600)
  colorMode(RGB, 1)

def draw():
  background(0)
  draw_spaceship()


def draw_spaceship():
  stroke(0.5, 1.0, 1.0)
  line(0, 20, 0, 30)

  stroke(1.0, 1.0, 1.0)
  line(0, 30, 0, 38)

  stroke(1.0, 1.0, 0.5)
  line(-4, 20, -4, 35)
  line(4, 20, 4, 35)

  stroke(1.0, 0.8, 0.0)
  line(-8, 20, -8, 30)
  line(8, 20, 8, 30)

  stroke(1.0, 0.6, 0)
  line(-12, 20, -12, 25)
  line(12, 20, 12, 25)

  stroke(0.0, 0.0, 0.0)
